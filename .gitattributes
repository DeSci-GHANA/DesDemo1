# Set the default behavior for all files
* text=auto

# Explicitly set text files to use LF line endings
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.html text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf

# Binary files should not be modified
*.jpg binary
*.jpeg binary
*.png binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.svg binary
*.pdf binary

# Windows specific
*.cmd text eol=crlf
*.bat text eol=crlf
*.ps1 text eol=crlf
